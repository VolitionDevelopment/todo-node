<!DOCTYPE html>
<html lang="en" ng-app="todo">
<head>
    <meta charset="UTF-8">
    <title>React (Just Kidding)</title>
    <link href="bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet">

    <style>
        .completed{
            text-decoration: line-through;
            color: red;
        }
    </style>
</head>
<body ng-controller="todoCtrl">

<div class="container" style="margin-top: 100px;">
    <div class="jumbotron">
        <h1>Todo App</h1>

        <hr>

        <form class="form-inline text-center" action="/add" method="post">
            <div class="form-group">
                <label>Task Title</label>
                <input type="text" name="todoTitle" class="form-control" placeholder="Todo" required>
                <label>Due Date</label>
                <input type="date" name="dueDate" class="form-control" placeholder="Date" required>
            </div>
            <hr>


            <div class="panel panel-default">
                <div class="panel-body">
                    <% for(var i = 0; i < todos.length; i++){ %>
                    <div class="well">
                        <h3><%= todos[i].title %><small> Due: <%= todos[i].date || new Date(Date.now()).toLocaleString()%></small></h3>

                        <label>
                            Complete:
                            <input type="checkbox" class="form-control">
                        </label>
                        <a href="remove?id=<%=todos[i]._id %>" class="btn btn-danger btn-block btn-lg">Delete</a>
                    </div>
                    <% } %>
                </div>
            </div>
        </form>
    </div>
</div>


<script src="angular/angular.min.js"></script>
<script src="angular-animate/angular-animate.js"></script>
<script src="javascripts/todo.js"></script>
</body>
</html>